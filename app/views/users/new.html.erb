<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>

  <p>First Name: <%= f.text_field :first_name, "data-testid" => "signup-first-name" %></p>
  <p>Last Name: <%= f.text_field :last_name, "data-testid" => "signup-last-name" %></p>
  <p>Email: <%= f.text_field :email, "data-testid" => "signup-email" %></p>
  <p>Password: <%= f.password_field :password, "data-testid" => "signup-password" %></p>
  <p>Password Confirmation: <%= f.password_field :password_confirmation, "data-testid" => "signup-password-confirmation" %></p>
  <p><%= f.submit "Submit" %></p>

<% end %>